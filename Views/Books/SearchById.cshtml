@model Book

@{
    ViewData["Title"] = "SearchById";
}



<div class="container">
    <h1>Search Book</h1>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
        <label class="form-check-label" for="exampleRadios1">
            Search By Id
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
        <label class="form-check-label" for="exampleRadios2">
            Search By ISBN
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option3">
        <label class="form-check-label" for="exampleRadios2">
            Search By Title
        </label>
    </div>
    <br />
    
    <div id="input-container">
        <form asp-action="SearchBookById" method="get">
            <input name="id" class="form-control" placeholder="Enter Book ID" /><br />
            <input class="btn btn-primary" type="submit" value="Search" onclick="getBooks()"/>
        </form>
    </div>
    <br />
    @if (@Model != null)
    {
        <div class="card" style="width:15rem">
            <a asp-action="GetBookById" asp-route-id="@Model.BookId">
                <img src=@Html.DisplayFor(modelItem => Model.ThumbnailUrl) class="card-img-top" alt="...">
            </a>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => Model.Title)</h5>
            </div>
        </div>
    }
</div>


